<Window x:Class="WSL2Killer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSL2Killer"
        mc:Ignorable="d"
        Title="WSL2 Killer" Height="200" Width="400">
    <Grid Background="#333">
        <StackPanel VerticalAlignment="Center">
            <TextBlock 
                Margin="10"
                HorizontalAlignment="Center"
                Foreground="White"
                Text="CLIP STUDIO PAINTを快適に使うために&#10;WSL2に犠牲になってもらいましょう"/>

            <Button Width="120" Height="40" Content="WSL2 おねんね" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                    BorderThickness="1"
                    BorderBrush="DarkGray"
                    Background="#eef"
                    CornerRadius="10">
                            <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
